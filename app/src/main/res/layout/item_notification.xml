<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="10dp"
    >
    <LinearLayout
        android:id="@+id/item_noticontet"
        android:layout_width="match_parent"
         android:layout_height="100dp"
        android:orientation="horizontal" >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="-10dp"
            android:src="@mipmap/icon_mu_144"
            android:layout_gravity="center"
            app:strokeColor="@null"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        >

        <TextView
            android:id="@+id/content_noti"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:paddingLeft="8dp"
            android:text="Cảm ơn ảnh vẽ tặng dễ thương của bạn Hiếu Lam"
            android:textColor="@color/black" />

        <TextView
            android:layout_weight="0.5"
            android:id="@+id/date_noti"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="8dp"
            android:textSize="10sp"
            android:text="MUStore, 30/08/2001"

            android:textColor="@color/reds" />
    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>